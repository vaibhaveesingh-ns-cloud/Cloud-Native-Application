{
  "name": "pixelboard",
  "version": "1.0.0",
  "description": "A minimal image-sharing board with user authentication, photo uploads, and album creation",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "echo 'No build step required for Node.js'",
    "deploy": "./deploy.sh",
    "lambda:deploy": "cd lambda && zip -r ../image-processor.zip . && aws lambda update-function-code --function-name pixelboard-image-processor --zip-file fileb://../image-processor.zip"
  },
  "keywords": ["image-sharing", "photo-board", "albums", "thumbnails"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "sharp": "^0.32.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "aws-sdk": "^2.1691.0",
    "@aws-sdk/client-s3": "^3.454.0",
    "@aws-sdk/client-dynamodb": "^3.454.0",
    "@aws-sdk/lib-dynamodb": "^3.454.0",
    "@aws-sdk/client-lambda": "^3.454.0",
    "express-session": "^1.17.3",
    "connect-dynamodb": "^3.0.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
